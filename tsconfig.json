{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "noImplicitAny": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}